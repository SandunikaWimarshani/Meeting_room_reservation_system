<h2><b>New Reservation </b> </h3>
<form action="view.ejs" method="post">
  <div class="element">
    <label for="name">Room NO</label>
    <input type="number" id="" name="emp_name" placeholder="Enter selected room no" min="1" max="8" required>
  </div>
  <div class="element">
    <label for="name">Your Name</label>
    <input type="text" id="name" name="emp_name" placeholder="Enter your name" pattern=[A-Z\sa-z]{3,20} required>
  </div>
  <div class="element">
    <label for="email">Your E-mail</label>
    <input type="email" id="email" name="emp_email" placeholder="Enter your email" required>
  </div>
  <div class="element">
    <label for="phone">Your Phone</label>
    <input type="tel" id="phone" name="emp_phone" placeholder="Enter your phone" pattern=(\d{3})-?\s?(\d{3})-?\s?(\d{4}) required>
  </div>
  
  <div class="element inlined">
    <label for="date">Date</label>
    <input type="date" id="date" name="date" required>
  </div>

  <div>
          <form>
              <label for="start-time">Start Time</label>
              <input type="time" id="start-time">

              <label for="end-time">End Time</label>
              <input type="time" id="end-time">
         </form>
       </div>
       <br>

<form method="get" action="/book/book">
  <button type="submit">Reserve The Room</button>
</form>
<br>
  <form method="get" action="/view/view">
    <button type="back" class="button buttonback">Back</button>
</form>


<script>
var currentDateTime = new Date();
var year = currentDateTime.getFullYear();
var month = (currentDateTime.getMonth() + 1);
var date = (currentDateTime.getDate() + 1);

if(date < 10) {
  date = '0' + date;
}
if(month < 10) {
  month = '0' + month;
}

var dateTomorrow = year + "-" + month + "-" + date;
var dateElem = document.querySelector("#date");


dateElem.setAttribute("min", dateTomorrow);

</script

