<% var message; if(message){%>
  <div class="alert alert success" role="alert">
    <%= message %> 
  </div>
<% } %>


<style>
body 
{
  font-family:Arial; 
  background: -webkit-linear-gradient(to right, #155799, #159957); 
  background: linear-gradient(to right, #155799, #159957); 
  color:whitesmoke;
  margin: 0 auto;
  padding: 50px;
}

h2{
    text-align: center;
}

form{
  width: 500px;
  margin: 0 auto;
  
}

div.ele {
  margin: 20px 0;
  text-align: left;
}

div.ele.inlined {
  width: 49%;
  display: inline-block;
  margin-left: 1%;
}

label {
  display: block;
  font-family: 'Nanum Gothic';
  padding-bottom: 10px;
  font-size: 1.25em;
}

input, select, textarea {
  border-radius: 2px;
  border: 2px solid #777;
  box-sizing: border-box;
  font-size: 1.25em;
  font-family: 'Nanum Gothic';
  width: 100%;
  padding: 10px;
}

.button {
  background-color: black;
  border: none;
  color: white;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  margin: 4px 2px;
  cursor: pointer;
}

button:hover {
  opacity: 0.6;
  cursor: pointer;
  border: 2px solid white;
}


</style>
<h2><b>New Reservation </b> </h3>
<form action="/form/form" method="post">
  <div class="ele">
    <label for="name">Room No</label>
    <input type="number" id="" name="room_no" placeholder="Enter selected room no" min="1" max="8" required>
  </div>
  <div class="ele">
    <label for="name">Your Name</label>
    <input type="text" id="name" name="emp_name" placeholder="Enter your name" required>
  </div>
  <div class="ele">
    <label for="email">Your E-mail</label>
    <input type="email" id="email" name="emp_email" placeholder="Enter your email" required>
  </div>
  <div class="ele">
    <label for="phone">Your Phone</label>
    <input type="tel" id="phone" name="emp_phone" placeholder="Enter your phone" required>
  </div>
  
  <div class="ele inlined">
    <label for="date">Date</label>
    <input type="date" id="date" name="date" required>
  </div>

  <div>
    
              <label for="start-time">Start Time</label>
              <input type="time" id="start-time" name="st_time">
              <br><br>
              <label for="end-time">End Time</label>
              <input type="time" id="end-time" name="end_time">
         
       </div>
       <br>

<table id="reserveBack">
  <tr>
    
          <button class="button reserve">Reserve</button>
        </form>
  </tr>
    <tr>
        <form method="get" action="/view/view">
            <button class="button back">Back</button>
          </form>
    </tr>

</table>

